model Topic {
  uid    Int             @id @default(autoincrement())
  name   String          @unique
  icon   String
  posts  TopicsOnPosts[]
  Post   Post?           @relation(fields: [postId], references: [id])
  postId String?
}

model Post {
  id     String  @unique
  topics Topic[]
}

model TopicsOnPosts {
  topic      Topic  @relation(fields: [topic_name], references: [name])
  topic_name String
  // post       Post   @relation(fields: [post_id], references: [id])
  // post_id    String

  @@id([topic_name])
}
